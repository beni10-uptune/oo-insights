{
  "buildCommand": "npx prisma generate && npm run build",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "public": true,
  "crons": [
    {
      "path": "/api/cron/daily-sitemap",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/daily-crawl",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/trends-daily",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/sitemap-review",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/trends-collection",
      "schedule": "0 10 * * *"
    }
  ],
  "functions": {
    "src/app/api/cron/daily-sitemap/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/crawl/sitemap/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/cron/daily-crawl/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/cron/trends-daily/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/cron/sitemap-review/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/crawl/full-site/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/admin/fetch-comprehensive-trends/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/crawl/enhanced/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/admin/fetch-all-markets/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/admin/fetch-real-data/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/trends/series/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/trends/drivers/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/trends/volume/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/cron/trends-collection/route.ts": {
      "maxDuration": 300
    }
  }
}